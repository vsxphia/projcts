#include <stdio.h>
#include <ctype.h>

int main(){
    char unit;
    float temp;

    printf("Is the temperature to convert in (C) or (F)? ");
    scanf("%c", &unit);

    unit = toupper(unit);

    if (unit == 'C'){
        printf("Enter the temperature in Celcius: ");
        scanf("%f", &temp);
        temp = temp * 9 / 5 + 32;
        printf("The temperature in fahrenheit is: %.1f", temp);
    } else if (unit == 'F'){
        printf("Enter the temperature in Fahrenheit: ");
        scanf("%f", &temp);
        temp = temp - 32 * 5 / 9;
        printf("The temperature in celcius is: %.1f", temp);
    }
    

    return 0;
}
